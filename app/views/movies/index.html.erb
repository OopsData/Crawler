<div class="container-fluid">
  <div class="row">
      <div class="col-xs-2  sidebar">
        <ul class="nav nav-sidebar">
          <li class="<%= current_tab?('movies','index')%>">
            <a href="/">电影列表</a>
          </li>
        </ul>
      </div> 
      <div class="col-xs-10  main">
          <h2 class="sub-header">包括了从土豆、优酷、腾讯视频、爱奇艺网站的爬取视频播放信息</h2>
          <form class="form-inline search_form" action='/tasks' method='get'>
            <div class="form-group">
              <input type="text" class="form-control" id="movie_name" placeholder="电影名称" name='name' vlaue="<%=params[:name]%>">
            </div>
            <div class="form-group">
              <input type="text" class="form-control" id="start_date" placeholder="开始时间" name='start_date' vlaue="<%=params[:start_date]%>">
            </div>
            <div class="form-group">
              <input type="text" class="form-control" id="end_date" placeholder="结束时间" name='end_date' vlaue="<%=params[:end_date]%>">
            </div>

            <button type="submit" class="btn btn-default">查询</button>
          </form>
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>电影名称</th>                                                 
                  <th>抓取时间</th>
                  <th>操作</th>
                </tr>
              </thead>
              <tbody>
                <% if @movies.length > 0 %>
                  <% @movies.each do |movie|%>
                    <tr>
                      <td><%= movie.title %></td>
                      <td><%= movie.created_at.strftime('%F')%></td>
                      <td>
                        <%= link_to '删除', movie, method: :delete,:class => 'btn btn-danger', data: { confirm: '确定要删除么?' } %>
                      </td>
                    </tr>                    
                  <% end %> 
                <% else %>
                  <tr>
                    <td colspan="8" align="center">还没有任何要电影</td>
                  </tr>                               
                <% end %>
              </tbody>
            </table>
            <div class="pull-right"><%= paginate @movies %></div>
          </div>
      </div>    
  </div>
</div> 





              