arr.each do |info|
  title = info.split(/::/).first
  url   = info.split(/::/).last
  site  =  '豆瓣' if url.include?('douban')
  site  =  '优酷' if url.include?('youku')
  site  =  '土豆' if url.include?('tudou')
  site  =  '腾讯' if url.include?('qq')
  site  =  '爱奇艺' if url.include?('iqiyi')
  Task.create(title:title,url:url,site:site)
end